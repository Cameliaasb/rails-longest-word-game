<h1>New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
  <div class="p-3 m-3 bg-success text-white rounded shadow-m">  <strong> <%= letter %> </strong> </div>
  <% end%>
</div>

<p> What's the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false"  >

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" value="<%= params[:word] %>"  >
  <input type="submit" value="Play">
</form>
